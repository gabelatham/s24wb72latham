extends layout

block content
  h1= title
  p Rows: #{query.rows} Cols: #{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p ERROR: Rows or Cols is not an Integers
  else if rows < 3 || 13 < rows 
    p ERROR: Rows outside of range 3-13
  else if cols < 3 || 13 < cols 
    p ERROR: Cols outside of range 3-13
  else 
    table#outer
      - for(let i=0;i<rows; i++){
          tr#middle
            - for(let j=0;j<cols; j++){
              td= Math.min(i, j) + 1
            - }
      - }